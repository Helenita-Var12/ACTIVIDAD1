nombre = "Helen"
edad = 23
altura = 1.65
es_estudiante = True
nombreMadre = "Antonia"
edadMadre = 60
alturaMadre = 1.72

suma = edad + edadMadre
resta = altura - alturaMadre
multiplicacion = edad * 2
division = altura / 2

print("El se llama:", nombre)
print("Tiene:", edad, "aÃ±os")

if edad >= 18:
    print(f"{nombre} es mayor de edad.")
else:
    print(f"{nombre} es menor de edad.")

if es_estudiante == True:
    print("Es estudiante.")
else:
    print("No es estudiante.")


print("Mide:", altura, "metros")
print("La suma de las edades de la madre y Helen es de: ", suma)
print("La diferencia de la altura de Helen y la madre es: ", resta)
print("El doble de la edad de Helen es: ", multiplicacion)
print("La mitad de la altura de Helen es: ", division)

print("Contando hasta 5:")
for i in range(1, 6):
    print(i)

contador = 0
print("Contando hasta 3 con bucle while:")
while contador < 3:
    print(contador)
    contador += 1
